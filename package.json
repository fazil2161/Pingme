{
  "name": "pingme",
  "version": "1.0.0",
  "description": "A full-stack MERN social media application",
  "main": "server/server.js",
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "start:both": "concurrently \"npm run server\" \"npm run client\"",
    "server": "cd server && npm run dev",
    "client": "cd client && npm start",
    "build": "npm run install-all && cd client && npm run build",
    "install-server": "cd server && npm install",
    "install-client": "cd client && npm install",
    "install-all": "npm run install-server && npm run install-client",
    "start": "cd server && npm start",
    "build:render": "npm run install-all && cd client && npm run build",
    "heroku-postbuild": "npm run build"
  },
  "keywords": [
    "social-media",
    "react",
    "nodejs",
    "mongodb",
    "express",
    "mern"
  ],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^7.6.0"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  }
} 